    font-size: 1.5em;
    margin-bottom: 30px;
    animation: fadeIn 1.5s ease;
}

header.hero .btn {
    background: white;
    color: #0055aa;
    padding: 12px 24px;
    text-decoration: none;
    border-radius: 5px;
    margin-top: 20px;
    display: inline-block;
    animation: bounceIn 1s ease;
    transition: transform 0.3s ease;
    position: relative;
    z-index: 10;
}

header.hero .btn:hover {
    transform: scale(1.1);
}

header.hero::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('../assets/images/hero-bg.jpg');
    background-size: cover;
    background-position: center;
    opacity: 0.2;
    animation: bgZoom 10s ease infinite;
}

/* Features Section */
.features {
    margin: 50px 0;
    animation: fadeIn 1s ease;
}

.feature-list {
    display: flex;
    flex-direction: column;
    gap: 30px;
}

.feature {
    background: #f9f9f9;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 8px;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transform: translateY(0);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.feature:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
}

.feature h3 {
    margin-top: 0;
}

/* CTA Section */
.cta {
    text-align: center;
    margin: 50px 0;
    animation: fadeIn 1.5s ease;
}

.cta .btn {
    background: #0055aa;
    color: white;
    padding: 12px 24px;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

.cta .btn:hover {
    background-color: #004494;
}

/* Animations */
@keyframes fadeIn {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

@keyframes bounceIn {
    0% {
        transform: scale(0.1);
        opacity: 0;
    }
    60% {
        transform: scale(1.2);
        opacity: 1;
    }
    100% {
        transform: scale(1);
    }
}

@keyframes bgZoom {
    0% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.1);
    }
    100% {
        transform: scale(1);
    }
}



